<p id="notice"><%= notice %></p>

<h1>Minhas Séries</h1>

<table class="table table-hove" >
  <thead>
    <tr>
      <th>Caminho da Série</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ts_tbls.each do |ts_tbl| %>
      <tr>
        <td><%= link_to "#{ts_tbl.ts.url}" , ts_tbl.ts.url %></td>
        <td><%= link_to 'Mostrar', ts_tbl %></td>
        <td><%= link_to 'Excluir', ts_tbl, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="text-right">
    <%= link_to 'Adicionar uma Série', new_ts_tbl_path %>
</p>
